{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve Jekyll",
      "type": "shell",
      "command": "jekyll serve --livereload --host 127.0.0.1 --port 4000",
      "isBackground": true,
      "problemMatcher": {
        "owner": "jekyll",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 0
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Regenerating:.*",
          "endsPattern": ".*Server address: http://127.0.0.1:4000.*"
        }
      },
      "runOptions": { "runOn": "folderOpen" }
    }
  ]
}
